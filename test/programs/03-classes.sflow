
class FuncMonoid:
  fun __init__ func:
    self.func = lam s param { func param }

  fun call param:
    self.func param

  fun __plus__ r_f_monoid:
    new_f_monoid = lam param:
      self.call param + r_f_monoid.call param

    FuncMonoid new_f_monoid

task = FuncMonoid (lam repo { !$"echo hola" })
task2 = FuncMonoid (lam repo { !$"echo adios" })

tasks =
   task
   + task2
   + FuncMonoid (lam repo { !$"echo hi" })
